[Unit]
Description=ServiceBay Container Management Interface
Documentation=https://github.com/mdopp/servicebay
After=network-online.target

[Container]
Image=ghcr.io/mdopp/servicebay:latest
ContainerName=servicebay
AutoUpdate=registry
PublishPort=3000:3000
# Persist application data (settings, history, etc.)
Volume=servicebay-data:/app/data
# SSH keys live inside /app/data/ssh and are managed automatically

[Install]
WantedBy=multi-user.target
